@model MyStore.Services.DBModels.ProductCategory

<div class="row">
    <div class="col-md-12">

        <form id="create-form" method="post" asp-action="CreateOrEdit" asp-route-id="@Model.ID" onsubmit="return jQueryModalPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label required"></label>
                <input asp-for="Name" class="form-control" required tabindex="0" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label required"></label>
                <input asp-for="Description" class="form-control" required tabindex="0" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          
            <div class="form-group text-right">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>