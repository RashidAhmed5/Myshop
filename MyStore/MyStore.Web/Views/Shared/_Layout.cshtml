            <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
            <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
            <link href="~/lib/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />
            <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
            <link rel="stylesheet" href="~/lib/select2/css/select2.css" />
            <link rel="stylesheet" href="~/lib/bootstrap-tagsinput/bootstrap-tagsinput.css" />
            <link href="~/lib/intl-tel-input/build/css/intlTelInput.min.css" rel="stylesheet" />
            <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />*@

