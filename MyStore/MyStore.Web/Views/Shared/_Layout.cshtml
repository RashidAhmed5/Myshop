            <script src="~/lib/aacassandra/jquery.pwstrength/jquery.pwstrength.js"></script>
            <script src="~/lib/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
            <script src="~/lib/select2/js/select2.full.js"></script>
            <script src="~/lib/intl-tel-input/build/js/intlTelInput-jquery.js"></script>
            <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>*@
